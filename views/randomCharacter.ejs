<%- include('./partials/head.ejs', {
    css: "randomCharacter",
    title: "Rick and Morty"
  }) %>

<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <div class="character_container"> 
              <div class="randomCharacter">
                <img class="imagenPersonaje" src="<%- character.image %> " alt="personaje" >
                <div class="infoPersonaje">
                  <div class="section">
                    <h1>                  
                        <%- character.name %>
                    </h1>
                    <p class="characterStatus">
                      <%- character.status %>
                    </p>
                  </div>
                  <div class="section">
                    <h4>
                      last known location:
                    </h4>
                    <p>
                      <%- character.location.name %>
                    </p>
                  </div>
                  <div class="section">
                    <h4>
                      Species:
                    </h4>
                    <% if(character.species) { %>
                      <p><%- character.species %></p>
                    <% } else{ %>
                      <p><%- Unknown %></p>
                     <% }  %>
                  </div>
                </div>
            </div>
          </div>

        <!-- CARD EPISODIOS -->
        <div class="related-info-character">
            <div class="card-episodios">
                <h1> Episodios donde aparece <%- character.name %> </h1>
                <div class="list-episodios">
                  <% for( let index = 1; index < character.episode.length; index++ ) { %>
                    <p> Episodio: <%- character.episode[index] %> </p>
                  <% } %>
                    
                </div>
            </div>
            
        </div>      
    </main>
    <footer>

    </footer>
</body>
</html>